<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button">
        <Setter Property="Background" Value="#93d0ff"/>
        <Setter Property="Padding" Value="4"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="FlightPlanTitle">
        <Setter Property="Padding" Value="4,0,10,0"/>
        <Setter Property="Margin" Value="0,2,0,2"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="FlightPlanValue">
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="Margin" Value="0,2,0,2"/>
    </Style>

    <Style TargetType="Button" x:Key="PrevNextButton">
        <Setter Property="Background" Value="#86bde6"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="MaxWidth" Value="200"/>
    </Style>

    <Style TargetType="Border" x:Key="PrevNextBorder">
        <Setter Property="Padding" Value="6"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="TitleBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>
</ResourceDictionary>